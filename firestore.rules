rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Default deny all access
    match /{document=**} {
      allow read, write: if false;
    }

    // Allow authenticated users to write to these collections
    match /activity_logs/{logId} {
      allow write: if request.auth != null;
    }
    match /notifications/{notificationId} {
      allow write: if request.auth != null;
    }
    match /team_chat_messages/{messageId} {
      allow write: if request.auth != null;
    }
    match /chat_rooms/{roomId} {
       allow write: if request.auth != null;
    }

    // Allow public read access to specific collections for real-time updates
    match /activity_logs/{logId} {
      allow read: if true;
    }
    match /notifications/{notificationId} {
      allow read: if true;
    }
    match /team_chat_messages/{messageId} {
      allow read: if true;
    }
    match /chat_rooms/{roomId} {
       allow read: if true;
    }

    // Keep the 'orders' collection private
    match /orders/{orderId} {
      allow read, write: if request.auth != null;
    }
  }
}